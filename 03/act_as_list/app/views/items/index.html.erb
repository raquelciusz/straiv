<div class="container">
  <div class="mt-5">
    <h1 class="text-center">ITEMS</h1>
  </div>
  <table class="table table-striped table-hover table-sm table-bordered mt-3">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Name</th>
        <th scope="col">Position</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, item_path(item) %></td>
        <td><%= item.position %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
