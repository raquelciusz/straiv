<div class="container">
  <div class="mt-5">
    <h1 class="text-center">ITEMS</h1>
  </div>
  <table class="table table-striped table-hover table-sm table-bordered mt-3">
    <thead>
      <tr class="table-responsive-md text-center">
        <th class="px-3" scope="col">ID</th>
        <th class="px-3" scope="col">Name</th>
        <th class="px-3" scope="col">Position</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
      <tr class="text-center">
        <td class="px-3"><%= item.id %></td>
        <td class="px-3"><%= link_to item.name, item_path(item) %></td>
        <td class="px-3"><%= item.position %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
